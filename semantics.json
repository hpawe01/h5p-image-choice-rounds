[
  {
    "name": "instanceParams",
    "type": "group",
    "expanded": true,
    "importance": "high",
    "fields": [
      {
        "name": "instanceParams",
        "type": "library",
        "label": "Image Choice exercise",
        "options": [
          "H5P.MultiMediaChoice 0.1"
        ]
      }
    ]
  },
  {
    "name": "roundOptions",
    "type": "group",
    "label": "Round settings",
    "importance": "low",
    "description": "These options will let you control how the rounds behave.",
    "fields": [
      {
        "name": "numberRounds",
        "label": "Number of rounds",
        "type": "number",
        "importance": "low",
        "min": 1,
        "default": 1
      },
      {
        "name": "numberImages",
        "label": "Number of images per round",
        "type": "number",
        "importance": "low",
        "min": 2,
        "optional": true
      },
      {
        "name": "numberImagesCorrect",
        "label": "Number of correct images per round",
        "type": "number",
        "importance": "low",
        "min": 0,
        "optional": true
      },
      {
        "name": "modeSampling",
        "label": "Mode for choosing images",
        "description": "Choose whether images will be returned to the pool of images to choose from. Please note that your requested number of (correct) images per round may not be possible if you set the mode to \"sampling without replacement\".",
        "type": "select",
        "importance": "low",
        "options": [
          {
            "value": "withReplacement",
            "label": "Sampling with replacement"
          },
          {
            "value": "withoutReplacement",
            "label": "Sampling without replacement"
          }
        ],
        "default": "withReplacement",
        "optional": false
      },
      {
        "name": "negativeIsAllowed",
        "label": "Score in a round can be negative",
        "type": "boolean",
        "importance": "low",
        "default": false,
        "optional": true
      },
      {
        "name": "enableSolutionsButton",
        "label": "Enable \"Show Solution\" button",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "confirmCheckDialog",
        "label": "Show confirmation dialog on \"Check\"",
        "importance": "low",
        "type": "boolean",
        "default": false,
        "optional": true
      },
      {
        "name": "singlePoint",
        "type": "boolean",
        "label": "Give one point for the whole question",
        "importance": "low",
        "default": false
      }
    ]
  },
  {
    "name": "endscreen",
    "type": "group",
    "label": "End screen",
    "importance": "low",
    "expanded": false,
    "fields": [
      {
        "name": "endScreenImage",
        "label": "end screen image",
        "type": "library",
        "optional": true,
        "options": [
          "H5P.Image 1.1"
        ]
      },
      {
        "name": "endScreenOutro",
        "label": "End screen text",
        "type": "text",
        "widget": "html",
        "placeholder": "You did it!",
        "optional": true,
        "enterMode": "div",
        "tags": [
          "strong",
          "em",
          "u",
          "a",
          "ul",
          "ol",
          "h2",
          "h3",
          "hr",
          "pre",
          "code"
        ]
      },
      {
        "name": "overallFeedback",
        "type": "group",
        "label": "Overall Feedback",
        "importance": "low",
        "expanded": true,
        "fields": [
          {
            "name": "overallFeedback",
            "type": "list",
            "widgets": [
              {
                "name": "RangeList",
                "label": "Default"
              }
            ],
            "importance": "high",
            "label": "Define custom feedback for any score range",
            "description": "Click the \"Add range\" button to add as many ranges as you need. Example: 0-20% Bad score, 21-91% Average Score, 91-100% Great Score!",
            "entity": "range",
            "min": 1,
            "defaultNum": 1,
            "optional": true,
            "field": {
              "name": "overallFeedback",
              "type": "group",
              "importance": "low",
              "fields": [
                {
                  "name": "from",
                  "type": "number",
                  "label": "Score Range",
                  "min": 0,
                  "max": 100,
                  "default": 0,
                  "unit": "%"
                },
                {
                  "name": "to",
                  "type": "number",
                  "min": 0,
                  "max": 100,
                  "default": 100,
                  "unit": "%"
                },
                {
                  "name": "feedback",
                  "type": "text",
                  "label": "Feedback for defined score range",
                  "importance": "low",
                  "placeholder": "Fill in the feedback",
                  "optional": true
                }
              ]
            }
          }
        ]
      }
    ]
  },
  {
    "name": "behaviour",
    "type": "group",
    "label": "Behavioural settings",
    "importance": "low",
    "description": "These options will let you control how the task behaves.",
    "fields": [
      {
        "name": "modeFeedback",
        "label": "Mode for overall scoring",
        "description": "\"Total score\" will sum up scores of all rounds. \"One point total\" will award 1 point if all rounds were fully correct, 0 otherwise. \"Custom\" allows to define a score based on score ranges.",
        "type": "select",
        "importance": "low",
        "options": [
          {
            "value": "totalScore",
            "label": "Total score"
          },
          {
            "value": "onePoint",
            "label": "One point total"
          },
          {
            "value": "custom",
            "label": "Custom"
          }
        ],
        "default": "totalScore",
        "optional": false
      },
      {
        "name": "customScoring",
        "type": "group",
        "label": "Custom scoring",
        "importance": "low",
        "expanded": true,
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "modeFeedback",
              "equals": "custom"
            }
          ]
        },
        "fields": [
          {
            "name": "overallScore",
            "type": "list",
            "widgets": [
              {
                "name": "RangeListScore",
                "label": "Default"
              }
            ],
            "importance": "high",
            "label": "Define custom absolute scores for any total score range",
            "description": "Click the \"Add range\" button to add as many ranges as you need. Example: 0-20% 1, 21-91% 2, 91-100% 3",
            "entity": "range",
            "min": 1,
            "defaultNum": 1,
            "optional": true,
            "field": {
              "name": "overallScore",
              "type": "group",
              "importance": "low",
              "fields": [
                {
                  "name": "from",
                  "type": "number",
                  "label": "Score Range",
                  "min": 0,
                  "max": 100,
                  "default": 0,
                  "unit": "%"
                },
                {
                  "name": "to",
                  "type": "number",
                  "min": 0,
                  "max": 100,
                  "default": 100,
                  "unit": "%"
                },
                {
                  "name": "score",
                  "type": "number",
                  "label": "Score for range",
                  "importance": "low",
                  "optional": true
                }
              ]
            }
          }
        ]
      },
      {
        "name": "enableRetry",
        "label": "Enable \"Retry\"",
        "description": "This option will be available after completing all rounds, not after each round.",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "enableSolutionsButton",
        "label": "Enable \"Solution\"",
        "description": "This option will be available after completing all rounds, not after each round.",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      }
    ]
  },
